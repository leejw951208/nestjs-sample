{
    "name": "clean-architecture",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:local": "NODE_ENV=local nest start --watch",
        "start:debug": "NODE_ENV=local nest start --debug --watch",
        "start:dev": "NODE_ENV=dev node dist/src/main",
        "start:prod": "NODE_ENV=prod node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "db:generate": "node prisma/scripts/generate.js",
        "db:migrate": "node prisma/scripts/migrate.js",
        "db:reset": "node prisma/scripts/db-reset.js",
        "env:create": "node scripts/create-env.js"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.2",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.2",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.2",
        "@nestjs/swagger": "^11.2.0",
        "@prisma/client": "^6.12.0",
        "add": "^2.0.6",
        "bcryptjs": "^3.0.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "dotenv": "^16.5.0",
        "dotenv-cli": "^8.0.0",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "nest-winston": "^1.10.2",
        "nestjs-cls": "^6.0.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.16.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.2",
        "@types/express": "^5.0.2",
        "@types/jest": "^29.5.14",
        "@types/lodash": "^4.17.17",
        "@types/node": "^22.15.29",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.33.0",
        "@typescript-eslint/parser": "^8.33.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "prisma": "^6.12.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.1",
        "ts-jest": "^29.3.4",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
